{
    "adapters": [
        {
            "model": "GenericNetworkAdapter",
            "ip": "tcp://152.19.231.28:1702",
            "ports": [
                {
                    "id": "qsys_core",
                    "name": "Sycamore",
                    "methods": [
                        {
                            "id": "system_power",
                            "name": "System Power",
                            "command": "ct SYSTEM_POWER_BTN_%\r\n",
                            "params": [
                                {
                                    "id": "on",
                                    "name": "On",
                                    "value": "ON"
                                },
                                {
                                    "id": "off",
                                    "name": "Off",
                                    "value": "OFF"
                                }
                            ],
                            "type": "actions"
                        },
                        {
                            "id": "display_power",
                            "name": "Display Power",
                            "command": "ct DISPLAY_POWER_BTN_%\r\n",
                            "params": [
                                {
                                    "id": "display_on",
                                    "name": "On",
                                    "value": "ON"
                                },
                                {
                                    "id": "display_off",
                                    "name": "Off",
                                    "value": "OFF"
                                }
                            ],
                            "type": "actions"
                        }
                    ]
                }
            ]
        },
        {
            "model": "GenericNetworkAdapter",
            "ip": "tcp://172.31.94.13:1702",
            "ports": [
                {
                    "id": "camera",
                    "name": "Camera",
                    "methods": [
                        {
                            "id": "camera_select",
                            "name": "Camera Select",
                            "command": "ct SEL_CAM_%\r\n",
                            "params": [
                                {
                                    "id": "front",
                                    "name": "Front",
                                    "value": "FRONT"
                                },
                                {
                                    "id": "rear",
                                    "name": "Rear",
                                    "value": "REAR"
                                }
                            ],
                            "type": "actions"
                        },
                        {
                            "id": "camera_presets",
                            "name": "Presets",
                            "command": "ct CAM_PRESET_LOAD_%\r\n",
                            "params": [
                                {
                                    "id": "cam_home",
                                    "name": "Home",
                                    "value": "01"
                                },
                                {
                                    "id": "cam_left",
                                    "name": "Left",
                                    "value": "02"
                                },
                                {
                                    "id": "cam_right",
                                    "name": "Right",
                                    "value": "03"
                                },
                                {
                                    "id": "cam_wide",
                                    "name": "Wide",
                                    "value": "04"
                                }
                            ],
                            "type": "actions"
                        }
                    ]
                }
            ]
        }
    ],
    "styles": [
        "qsys_core.icon=icon_rack_equipment",
        "qsys_core.system_power.icon=icon_power",
        "qsys_core.system_power.invisible=true",
        "qsys_core.display_power.icon=icon_tv",
        "camera.main_method=camera_select",
        "camera.icon=icon_projector"
    ],
    "rules": 
    {
        "zr_zoom_app_opened": [
            "qsys_core.system_power.system_on"
        ],
        "zr_zoom_app_closed": [
            "qsys_core.system_power.system_off"
        ]
    }
}